{
  "root": "lihe-website",
  "framework": "vite",
  "packageManager": "npm",
  "buildCommand": "cd lihe-website && npm install && npm run build",
  "installCommand": "npm install",
  "buildOutput": "lihe-website/dist",
  "nodeVersion": "20",
  "dev": {
    "port": 3000,
    "command": "npm run dev"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "VITE_APP_TITLE": "来贺白酒官网"
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "permissions": {
    "filesystem": {
      "root": true,
      "write": true
    }
  },
  "outputs": {
    "dir": "lihe-website/dist",
    "include": ["**/*"]
  },
  "build": {
    "dockerfile": {
      "path": "./Dockerfile",
      "target": "runtime",
      "buildContext": "."
    }
  }
} 